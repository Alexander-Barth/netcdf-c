# Test c output
T=tst_chunks
VG=valgrind --leak-check=full
GDB=gdb --args
ARGS=

CFLAGS=-gstabs+ -O0 -I.. -I../include -I/usr/local/include
LDFLAGS=../liblib/.libs/libnetcdf.a  -L/usr/local/lib -lhdf5_hl -lhdf5 -lz -lm -lcurl -lbz2

#	cd .. ; ${MAKE} all

all::
	export LD_RUN_PATH; export CFLAGS; export LDFLAGS; \
	gcc -o t ${CFLAGS} ${T}.c ${LDFLAGS}

t::
	./t ${ARGS}

v::
	${VG} ./t ${ARGS}

g::
	${GDB} ./t ${ARGS}
